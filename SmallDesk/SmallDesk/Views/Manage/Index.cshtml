@model SmallDesk.Models.IndexViewModel
@{
    ViewBag.Title = "Perfil";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Altera sua conta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Senha:</dt>
        <dd>
            [
                @Html.ActionLink("Alterar Senha", "ChangePassword", new { userId = Model.UserId })
            ]
        </dd>
        @if (User.IsInRole("Admin"))
        {
            <dt>Regra:</dt>
            <dd>
                [
                    @Html.ActionLink("Alterar Regra", "ChangeRole", new { userId = Model.UserId })
                ]
            </dd>
            <dt>Setor:</dt>
            <dd>
                [
                @Html.ActionLink("Alterar Setor", "ChangeDepartment", new { userId = Model.UserId })
                ]
            </dd>
        }
    </dl>
</div>
